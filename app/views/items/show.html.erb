<div class="container mt-5">
  <div class="row">
    <!-- Genre Column -->
    <div class="col-md-3 mb-3">
      <%= render 'templates/genre', genres: @genres %>
    </div>
    <div class="col-md-1"></div>
    <!-- Image Column -->
    <div class="col-md-8">
      <div class="image-container mb-5">
        <%= image_tag @item.get_product_image(300,300), size: "300x300", class: "img-fluid img-thumbnail" %>
      </div>
      <div class="item-details">
        <h1 class="mb-3"><%= @item.name %></h1>
        <p class="mb-3"><%= @item.explanation %></p>
        <p class="mb-4">￥<span class="h3"><%= @item.price %></span> (税込)</p>
        <% if current_end_user %>
          <%= form_with model: @cart_item, html: { class: "form-inline" } do |f| %>
            <div class="form-group mb-2">
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, *[1..10], {}, { class: "form-control mr-2" } %>
            </div>
            <div class="form-group mb-2">
              <%= f.submit "カートに入れる", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
