<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr >
              <td class="text-center">
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <h1>商品一覧<span class="h3">(全<%= @items.count %>件)</span></h1>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
        <div class="w-20 mr-3">
          <%= link_to  item_path(item.id) do %>
            <%= image_tag item.get_product_image(100,100),size:"100x100"%><br>
            <p><%= item.name %></p>
          <% end %>
          <p>¥<%= item.price %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>