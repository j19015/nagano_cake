<h1><%= flash[:notice]%></h1>
<div class="p-5 ml-15 mr-15 w-70">
  <div class="d-flex">
    <div class="bg-gray h2">ショッピングカート</div>
    <div class="ml-auto"><%= link_to "❌",cart_item_destroy_all_path ,method: :delete,class:"btn btn-danger rounded-circle plus" %></div>
  </div>
  <div class="mt-3">
    <table class="table w-80">
      <thead class="thead-light">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price*1.1).floor %></td>
            <td>
                <%= form_with model:cart_item,url: cart_item_path(cart_item.id),method: :patch do |f| %>
                  <%= f.hidden_field :item_id, value: cart_item.item.id %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "編集",class:"btn btn-success"%>
                <% end %>
            </td>
            <td><%= (cart_item.item.price*1.1).floor*cart_item.amount %></td>
            <td><%= link_to "削除する",cart_item_path(cart_item.id),method: :delete,class:"btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div>
</div>