<div class="p-5 ml-10 mr-10 w-80">
  <h2><span class="bg-gray">ジャンル一覧・追加</span></h2>
  <div class="mt-5">
    <%= render "end_users/erros",obj: @genre %>
    <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
      ジャンル名<%= f.text_field :name,class: "ml-2" %>
      <%= f.submit "新規登録",class: "btn btn-success ml-2" %>
    <% end %>
  </div>
  <div class="mt-5">
    <table class="table w-50">
      <thead class="thead-light">
        <tr>
          <th class="text-center"><strong>ジャンル</strong></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><p class="ml-5"><%= genre.name %></p></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre.id),class: "btn btn-success float-right mr-5" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>