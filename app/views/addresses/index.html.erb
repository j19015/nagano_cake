<div class="p-5 ml-10 mr-10 w-80">
  <h2><span class="bg-gray">配送先登録/一覧</span></h2>
  <%= render "/end_users/erros",obj: @address %>
  <div class="ml-10 mt-5">
    <%= form_with model:@address do |f| %>
      <div class="field mb-3">
        <%= f.label :"郵便番号(ハイフンなし)",class: "w-15" %>
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code",class: "rounded" %>
      </div>
      <div class="field mb-3">
        <%= f.label :"住所",class: "w-15" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "rounded" %>
      </div>
      <div class="field mb-3">
        <%= f.label :"宛名",class: "w-15" %>
        <%= f.text_field :name, atofocus: true, autocomplete: "name",class: "rounded" %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録",class: "btn btn-success w-20 mt-5 "%>
      </div>
    <% end %>
  </div>
  <div class="mt-5">
    <table class="table">
      <thead class="thead-light">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する",edit_address_path(address.id),class:"btn btn-success" %>
              <%= link_to "削除する",address_path(address.id),method: :delete,data: {confirm: "この配送先情報を本当に削除しますか？"},class:"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>